[client]
default-character-set = utf8 


[mysqld]
server-id=1
lower_case_table_names=1
datadir		= /opt/jetendo-server/mysql/data
tmpdir		= /tmp
slow_query_log_file	= /opt/jetendo-server/mysql/data/mariadb-slow.log
character-set-server  = utf8 
collation-server      = utf8_general_ci 
character_set_server   = utf8 
collation_server       = utf8_general_ci 
skip-name-resolve
sql-mode="NO_ENGINE_SUBSTITUTION"
innodb_file_per_table
default-storage-engine=innodb

# disable binary log unless using replication
log_bin			= OFF
log_bin_index		= OFF

skip-external-locking
#
# Instead of skip-networking the default is now to listen only on
# localhost which is more compatible and is not less secure.
bind-address		= 127.0.0.1

performance_schema=off


#
# * Fine Tuning
#
max_connections		= 400
connect_timeout		= 5
wait_timeout		= 600
max_allowed_packet	= 20M
sort_buffer_size	= 4M
bulk_insert_buffer_size	= 16M
tmp_table_size		= 64M
#
# * MyISAM
#
# This replaces the startup script and checks MyISAM tables if needed
# the first time they are touched. On error, make copy and try a repair.
#myisam_recover          = BACKUP
key_buffer_size		= 128M
myisam_sort_buffer_size	= 512M
concurrent_insert	= 2
read_buffer_size	= 2M
read_rnd_buffer_size	= 1M
#
# * Query Cache Configuration
#
# Cache only tiny result sets, so we can fit more in the query cache.
query_cache_limit		= 1M
query_cache_size		= 512M
# for more write intensive setups, set to DEMAND or OFF
query_cache_type		= 1

# Error logging goes to syslog due to /etc/mysql/conf.d/mysqld_safe_syslog.cnf.
#
# we do want to know about network errors and such
log_warnings		= 2
log_slow_verbosity	= query_plan


#
# The following can be used as easy way to replay backup logs or for replication.
# note: if you are setting up a replication slave, see README.Debian about
#       other settings you may need to change.
#report_host		= master1
#auto_increment_increment = 2
#auto_increment_offset	= 1
#log_bin			= /opt/jetendo-server/mysql/logs/mariadb-bin
#log_bin_index		= /opt/jetendo-server/mysql/logs/mariadb-bin.index
# not fab for performance, but safer
#sync_binlog		= 1
#expire_logs_days	= 10
#max_binlog_size         = 100M
# slaves
#relay_log		= /opt/jetendo-server/mysql/logs/relay-bin
#relay_log_index	= /opt/jetendo-server/mysql/logs/relay-bin.index
#relay_log_info_file	= /opt/jetendo-server/mysql/logs/relay-bin.info
#log_slave_updates
#read_only


# Read the manual, too, if you want chroot!
# chroot = /var/lib/mysql/


# Disabling symbolic-links is recommended to prevent assorted security risks
symbolic-links=0

# The default storage engine that will be used when create new tables when
default-storage-engine=INNODB

max_connections=400
thread_cache_size=32
myisam_max_sort_file_size=10G

innodb_additional_mem_pool_size=3M
innodb_flush_log_at_trx_commit=1

# Important: make sure innodb_buffer_pool_size isn't more then available ram after all other applications are loaded
innodb_buffer_pool_size=4G
innodb_thread_concurrency=8
innodb_read_io_threads=8
innodb_write_io_threads=4
innodb_io_capacity=100
max_heap_table_size=1024M

# you can't just change log file size, requires special procedure
innodb_log_file_size	= 50M
innodb_log_buffer_size	= 8M
innodb_blocking_buffer_pool_restore=1
innodb_buffer_pool_restore_at_startup=1
innodb_file_per_table	= 1
innodb_open_files	= 2000
innodb_adaptive_flushing_method  = keep_average 
innodb_flush_neighbor_pages = 0
innodb_io_capacity	= 5000
innodb_flush_method	= O_DIRECT

table_open_cache=1024
key_buffer_size=256M
join_buffer_size = 128K
group_concat_max_len = 4M
max_allowed_packet=20M
slow_query_log=1
slow_query_log_file=/opt/jetendo-server/mysql/logs/slow-queries.log
long_query_time=10
innodb_stats_on_metadata=0

innodb_data_home_dir = /opt/jetendo-server/mysql/logs/
innodb_log_group_home_dir  = /opt/jetendo-server/mysql/logs/
innodb_data_file_path=ibdata1:50M;ibdata2:50M:autoextend:max:500M
innodb_doublewrite_file=/opt/jetendo-server/mysql/logs/innodb_doublewrite_file.bin
aria_log_dir_path = /opt/jetendo-server/mysql/logs/

